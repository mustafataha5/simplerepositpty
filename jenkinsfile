pipeline {
    agent { 
        node {
            label 'jenkins-agent-python'
            }
      }
      triggers{
        pollSCM 'H/5 * * * *'
      }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                cd myapp/
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirement.txt
                echo "Successfully end of building.."
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                cd myapp/
                python3 hello.py
                python3 hello.py --name="mustafa taha for Github"
                echo "Successfully end of testing.."
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
